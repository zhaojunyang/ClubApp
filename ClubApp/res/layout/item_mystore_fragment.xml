<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.example.clubapp"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:id="@+id/layout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:paddingLeft="20dp"
        android:paddingRight="20dp" >

        <RelativeLayout
            android:id="@+id/relativeLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="20dp"
            android:layout_centerVertical="true" >

            <com.geminno.club.view.CircleImageView
                android:id="@+id/iv_store_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:border_color="#ffffff"
                android:src="@drawable/club_icon_climbarticle" />

            <TextView
                android:id="@+id/iv_store_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/iv_store_header"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/iv_store_header"
                android:text="blues"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/iv_store_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/iv_store_name"
                android:layout_alignBottom="@+id/iv_store_name"
                android:layout_alignParentRight="true"
                android:text="16/03/15"
                android:textSize="20sp" />
        </RelativeLayout>

    </RelativeLayout>
    <View
	   android:id="@+id/line1"
	   android:layout_width="match_parent"
	   android:layout_height="0.5dp"
	   android:layout_below="@+id/item_activity_content"
	   android:background="@color/btn_gray_normal" />

    <RelativeLayout
        android:id="@+id/item_activity_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/layout1"
        android:paddingBottom="20dp"
        android:paddingLeft="20dp"
        android:paddingTop="20dp" >

        <ImageView
            android:id="@+id/iv_activityimage"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@drawable/icon_ls" />

        <TextView
            android:id="@+id/tv_avtivityname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_activitytype"
            android:layout_centerHorizontal="true"
            android:text="勇闯天涯"
            android:layout_marginLeft="20dp"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_activitytype"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_avtivityname"
            android:layout_alignTop="@+id/iv_activityimage"
            android:text="2016/03/15/09:40:08"
            android:textSize="20sp" />

    </RelativeLayout>

</RelativeLayout>
