<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.example.clubapp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/find_page_fragment_bg" >

    <RelativeLayout
        android:id="@+id/lable"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@color/find_page_fragment_topbg" >

        <TextView
            android:id="@+id/userinfo_fragment_toptext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="个人资料"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/userinfo_fragment_tv_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:text="保存"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/userinfo_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:src="@drawable/ls_page_back_icon" />
    </RelativeLayout>

    <View
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/lable"
        android:background="@color/btn_gray_normal" />

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lable"
        android:layout_centerHorizontal="true"
        android:paddingBottom="30dp"
        android:paddingTop="30dp" >

        <com.geminno.club.view.RoundAngleImageView
            android:id="@+id/iv_header_icon"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            app:roundWidth="10dp"
			app:roundHeight="10dp"
            android:src="@drawable/ls_nologin_header_icon" />

    </RelativeLayout>

    <View
        android:id="@+id/line2"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/relativeLayout1"
        android:background="@color/btn_gray_normal" />

    <RelativeLayout
        android:id="@+id/layout_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/relativeLayout1"
        android:layout_centerVertical="true"
        android:paddingBottom="20dp"
        android:paddingTop="20dp" >

        <EditText
            android:id="@+id/et_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="26dp"
            android:layout_toRightOf="@+id/tv_layout_username"
            android:background="@color/find_page_fragment_bg"
            android:text="(51俱乐部)钟建洋"
            android:textSize="20sp" >
            <requestFocus />
        </EditText>

        <TextView
            android:id="@+id/tv_layout_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/et_username"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="30dp"
            android:text="昵称"
            android:textSize="20sp" />
    </RelativeLayout>

    <View
        android:id="@+id/line3"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/RelativeLayout01"
        android:background="@color/btn_gray_normal" />

    <View
        android:id="@+id/line4"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/line3"
        android:background="@color/btn_gray_normal" />

    <View
        android:id="@+id/View01"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/layout_username"
        android:background="@color/btn_gray_normal" />

  

    <RelativeLayout
        android:id="@+id/RelativeLayout01"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/layout_username"
        android:paddingBottom="15dp"
        android:paddingTop="15dp" >

        <TextView
            android:id="@+id/TextView01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30dp"
            android:text="签名"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/et_uerinfo_sign"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30dp"
            android:layout_toRightOf="@+id/TextView01"
            android:background="@color/find_page_fragment_bg"
            >
			<requestFocus />
        </EditText>

    </RelativeLayout>


</RelativeLayout>