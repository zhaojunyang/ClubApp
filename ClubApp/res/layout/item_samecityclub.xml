<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
     >
	
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
         >
	<!-- 同城俱乐部LOGO -->
        <com.geminno.club.view.RoundImageView
            android:id="@+id/samecityclub_roundImageView1"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:src="@drawable/ba_club_search_bg" />
<!-- 同城俱乐部简介-->
        <TextView
            android:id="@+id/samecityclub_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/samecityclub_clubname"
            android:layout_below="@+id/samecityclub_clubname"
            android:textSize="15dp"
            android:layout_margin="5dp"
            android:textColor="#AFAFAF"
            android:text="这里只是一个简单的简介" />
<!-- 同城俱乐部参与人数-->
        <TextView
            android:id="@+id/samecityclub_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/samecityclub_clubname"
            android:layout_alignBottom="@+id/samecityclub_clubname"
            android:layout_alignParentRight="true"
            android:layout_marginRight="16dp"
            android:textSize="15dp"
            android:textColor="#C6BBB1"
            android:text="1075人参与" />
<!-- 同城俱乐部名称 -->
        <TextView
            android:id="@+id/samecityclub_clubname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/samecityclub_roundImageView1"
            android:layout_toRightOf="@+id/samecityclub_roundImageView1"
            android:paddingLeft="5dp"
            android:paddingTop="5dp"
            android:text="程智渊俱乐部"
            android:textColor="#767573"
            android:textSize="18dp" />

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/samecityclub_roundImageView1"
            android:src="@drawable/club_group_sepline" />
    
    </RelativeLayout>
	
    
    
    
</RelativeLayout>