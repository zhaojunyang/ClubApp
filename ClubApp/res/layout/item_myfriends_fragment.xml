<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" xmlns:app="http://schemas.android.com/apk/res/com.example.clubapp">
    <RelativeLayout
        android:id="@+id/item_friends_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/layout1"
        android:paddingBottom="10dp"
        android:paddingLeft="20dp"
        android:paddingTop="10dp" >

        <com.geminno.club.view.CircleImageView
            android:id="@+id/iv_friends_header"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:border_color="#ffffff"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@drawable/icon_ls" />

        <TextView
            android:id="@+id/tv_friendsname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/iv_friends_header"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/iv_friends_header"
            android:layout_marginTop="5dp"
            android:text="勇闯天涯"
            android:textSize="16sp"
             />

        <TextView
            android:id="@+id/tv_friendsign"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv_friends_header"
            android:layout_alignLeft="@+id/tv_friendsname"
            android:text="一路向西去云游"
            android:textSize="13sp" 
            android:layout_marginBottom="5dp"/>

    </RelativeLayout>
    <View
	   android:id="@+id/line1"
	   android:layout_width="match_parent"
	   android:layout_height="0.5dp"
	   android:layout_below="@+id/item_friends_content"
	   android:background="@color/btn_gray_normal" />

</RelativeLayout>
