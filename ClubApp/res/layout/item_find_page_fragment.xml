<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/item_findpage_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <RelativeLayout
            android:id="@+id/iv_club_activity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/club_1"
            android:layout_marginTop="5dp" >
		</RelativeLayout>
        <TextView
            android:id="@+id/tv_club_activity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_club_activity"
            android:layout_centerHorizontal="true"
            android:text="(开奖啦)探索无止境 TheNorthFace"
            android:textSize="16sp"
            android:layout_marginTop="5dp" />

    </RelativeLayout>

</LinearLayout>
