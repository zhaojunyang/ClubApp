<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    <RelativeLayout
        android:id="@+id/clubmainpage_activityRelation"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true" >
		
        <ImageView 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/club_group_sepline"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"/>
        
        
        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="131dp"
            android:src="@drawable/club_publish_activity" />

    </RelativeLayout>
	
    <TextView 
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#F8F8F8"
            android:layout_above="@+id/clubmainpage_lv_activities"
            />
    
    
    <com.geminno.club.view.RefreshListView
        android:id="@+id/clubmainpage_lv_activities"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/clubmainpage_activityRelation"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true" >
    </com.geminno.club.view.RefreshListView>
	
</RelativeLayout>
