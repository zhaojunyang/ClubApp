<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <!-- 顶部标题栏 -->

    <RelativeLayout
        android:id="@+id/tl_title"
        android:layout_width="match_parent"
        android:layout_height="40dp" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:src="@drawable/ba_back_arrow_black" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:src="@drawable/socialize_more" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@id/imageView4"
            android:src="@drawable/socialize_wechat" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@id/imageView3"
            android:src="@drawable/socialize_circle" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_activityHeaderPhoto"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentLeft="true"
            android:src="@drawable/activity_header_image" />

        <TextView
            android:id="@+id/tv_activityHeaderName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/iv_activityHeaderPhoto"
            android:text="天涯领队——婷婷" />

        <TextView
            android:id="@+id/tv_isMaster"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tv_activityHeaderName"
            android:background="#ff0000"
            android:text="楼主" />

        <TextView
            android:id="@+id/tv_isInterest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@drawable/corner_view"
            android:text="+关注"
            android:textSize="12sp" />
    </RelativeLayout>
	<ImageView 
	    android:layout_width="match_parent"
	    android:layout_height="200dp"
	    android:background="@drawable/activity_picture"/>

	<TextView
	    android:id="@+id/textView1"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:text="烟花三月下扬州问问，烟花三月下扬州问问烟花三月下扬州问问烟花三月下扬州问问" />

	<RelativeLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content" >
        <TextView 
            android:id="@+id/tv_releaseDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="◎4天前"/>
        <TextView 
            
            android:id="@+id/tv_readerNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tv_releaseDate"
            android:text="3423人读过"/>
        <TextView 
            android:id="@+id/tv_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="回复"/>
        
	</RelativeLayout>
	<RelativeLayout 
	    android:layout_width="match_parent"
	    android:layout_height="120dp">
	    
	</RelativeLayout>
	<RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="40dp"
          android:background="@drawable/textview_border">
        <ImageView 
            android:id="@+id/iv_likeButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="30dp"
            android:src="@drawable/like_selector"/>
        <TextView 
            android:id="@+id/tv_likeButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:layout_toRightOf="@id/iv_likeButton"
            android:text="42点赞"/>
         <ImageView 
            android:id="@+id/iv_activityReply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             android:layout_toRightOf="@id/tv_likeButton"
            android:paddingLeft="30dp"
            android:src="@drawable/activity_reply"/>
          <TextView 
            android:id="@+id/tv_activityReply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:layout_toRightOf="@id/iv_activityReply"
            android:text="42点赞"/>
         <ImageButton 
             android:layout_width="50dp"
             android:layout_height="30dp"
      		android:background="#00ffffff"
      		android:layout_alignParentRight="true"
            android:src="@drawable/activity_enter"/>
    </RelativeLayout>
</LinearLayout>