<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff" >

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true" >
<!-- 返回按钮 -->
        <ImageView
            android:id="@+id/club_apply_back"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:src="@drawable/club_addinfo_back" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/club_apply_back"
            android:layout_centerHorizontal="true"
            android:text="加入俱乐部"
            android:textColor="#4B423F"
            android:textSize="20dp" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:src="@drawable/club_group_sepline" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/relativeLayout1"
        android:background="#F0F0F0" >

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="为了控制成员质量，请认真填写表单"
            android:textColor="#FF9838"
            android:textSize="15dp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/relativeLayout2"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:textColor="#121212"
        android:textSize="18dp"
        android:text="城市" />
<!-- 输入城市 -->
    <EditText
        android:id="@+id/club_apply_et_city"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/textView3"
        android:layout_alignParentRight="true"
        android:layout_marginRight="40dp"
        android:layout_below="@+id/textView3"
        android:layout_marginTop="14dp"
        android:background="@drawable/bg_edittext"
        android:ems="10"
        android:textColor="#5D5D5D"
        android:textSize="18dp"
        android:hint="请输入城市.."
       	android:padding="8dp"
         > 

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/club_apply_et_city"
        android:layout_centerVertical="true"
        android:layout_below="@+id/club_apply_et_city"
        android:layout_marginTop="20dp"
        android:text="性别"
        android:textColor="#121212"
        android:textSize="18dp" />
<!-- 男性的选择 -->
    <ImageView
        android:id="@+id/club_apply_selman"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView4"
        android:layout_below="@+id/textView4"
        android:layout_marginTop="20dp"
        android:src="@drawable/club_apply_sex" />
	
    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/club_apply_selman"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/textView4"
        android:text="男" 
        android:textColor="#121212"
        android:textSize="20dp"/>
<!-- 女性的选择 -->
    <ImageView
        android:id="@+id/club_apply_selwoman"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/club_apply_selman"
        android:layout_below="@+id/club_apply_selman"
        android:layout_marginTop="20dp"
        android:src="@drawable/club_apply_sex" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/club_apply_selwoman"
        android:layout_alignLeft="@+id/textView5"
        android:text="女" 
        android:textColor="#121212"
        android:textSize="20dp"/>
<!-- 加入按钮 -->
    <Button
        android:id="@+id/club_apply_addbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView6"
        android:layout_marginTop="20dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/club_sign"
        android:text="加入"
        android:textSize="20dp"
        android:textColor="#ffffff" />
    
</RelativeLayout>