<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    
     >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        >
<!-- 用户头像 -->
        <com.geminno.club.view.RoundImageView
            android:id="@+id/club_members_item_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:src="@drawable/club_friends_logo" />

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/club_members_item_logo"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:src="@drawable/club_group_sepline" />
<!-- 用户名字 -->
        <TextView
            android:id="@+id/club_members_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/club_members_item_logo"
            android:layout_toRightOf="@+id/club_members_item_logo"
            android:layout_marginLeft="5dp"
            android:text="程智渊" 
            android:textColor="#262626"
            android:paddingTop="5dp"
            android:textSize="18dp"
            />
<!-- 用户个人宣言 -->
        <TextView
            android:id="@+id/club_members_introduce"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/club_members_item_logo"
            android:layout_alignLeft="@+id/club_members_item_name"
            android:paddingBottom="5dp"
            android:textSize="15dp"
            android:textColor="#B5B5B5"
            android:text="我们一起敲代码" />
<!-- 是否关注 -->
        <ImageView
            android:id="@+id/club_members_iv_attention"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:src="@drawable/club_members_friends_isattention" />
<!-- 是否是群主 -->
        <ImageView
            android:id="@+id/club_members_iv_ismaster"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignBottom="@+id/club_members_item_name"
			android:layout_toRightOf="@+id/club_members_item_name"
			android:layout_marginLeft="5dp"
            android:src="@drawable/club_shenfen" />
<!-- 用户的等级 -->
        <ImageView
            android:id="@+id/club_members_userlevel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/club_members_item_name"
            android:layout_toRightOf="@+id/club_members_iv_ismaster"
            android:layout_marginLeft="5dp"
            android:src="@drawable/club_level_1" />

    </RelativeLayout>
    
</RelativeLayout>
